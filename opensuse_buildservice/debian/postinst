#!/bin/sh
# postinst script for notqmail
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

qmaildir=/var/qmail
logdir=/var/log/svc
####################################

case "$1" in
    configure)
		if [ " $2" = " " ] ; then
			echo "installing notqmail"
		else
			echo "upgrading notqmail $2"
		fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	exit 0
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# notqmail.upgrade/notqmail.install are created
# by the preinst script
if [ -f /tmp/notqmail.upgrade ] ; then # upgrade
	if [ -f ${qmaildir}/bin/instchown ] ; then
		# required because on debian you lose the setuid bit of qmail-queue
		# and the proper permissions of files in /var/qmail/queue
		echo "Checking Installed Permissions"
		${qmaildir}/bin/instchown > /dev/null 2>&1 || true
	fi
  rm -f /tmp/notqmail.upgrade
  exit 0
fi
rm -f /tmp/notqmail.install

echo "Post Installation..."
(
echo "Creating ${logdir}"
/bin/mkdir -p ${logdir}
/bin/chown -R qmaill:nofiles ${logdir}

echo "Checking Installed Permissions"
if [ -f ${qmaildir}/bin/instchown ] ; then
	${qmaildir}/bin/instchown || true
fi
dpkg-statoverride --list ${qmaildir}/bin/qmail-queue >/dev/null ||
	dpkg-statoverride --update --add qmailq qmail 4711 ${qmaildir}/bin/qmail-queue
if [ ! -f ${qmaildir}/control/me ] ; then
	echo "Creating ${qmaildir}/control/me"
	uname -n > ${qmaildir}/control/me
fi

# setup notqmail as an alternative mta
update-alternatives --install /usr/sbin/sendmail mta /var/qmail/bin/sendmail 120 \
	--slave /usr/lib/sendmail mta-sendmail /var/qmail/bin/sendmail

# Create aliases if they do not exist
mkdir -p  ${qmaildir}/alias/Maildir/new
mkdir -p  ${qmaildir}/alias/Maildir/cur
mkdir -p  ${qmaildir}/alias/Maildir/tmp
chown -R alias:qmail ${qmaildir}/alias/Maildir
for i in postmaster mailer-daemon root
do
  if [ ! -f ${qmaildir}/alias/.qmail-"$i" ] ; then
    echo "${qmaildir}/alias/Maildir/" > ${qmaildir}/alias/.qmail-"$i"
  fi
done
) >> /tmp/notqmail-setup.log 2>&1

echo "Check /tmp/notqmail-setup.log for the detailed installation log!!!"

exit 0
