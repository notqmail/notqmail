#!/bin/sh
# preinst script for notqmail
#
# see: dh_installdeb(1)

set -e
qmaildir=/var/qmail
logdir=/var/log/svc

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)
	rm -f /tmp/notqmail.install /tmp/notqmail.upgrade
	touch /tmp/notqmail.$1
	if [ " $1" = " upgrade" ] ; then
		exit 0
	fi
	#
	# Create a users and groups. Do not report any problems if they already
	# exists.
	#
	(
	echo "Adding notqmail users/groups"
	addgroup -q --system nofiles
	addgroup -q --system qmail
	
	for i in alias qmaild qmaill qmailp qmailq qmailr qmails
	do
		rm -f /var/spool/mail/$i
	done

	mkdir -p ${qmaildir}/alias
	mkdir -p ${logdir}
	adduser -q --system --disabled-login --home ${qmaildir}/alias --no-create-home --ingroup nofiles alias
	adduser -q --system --disabled-login --home ${qmaildir}       --no-create-home --ingroup nofiles qmaild
	adduser -q --system --disabled-login --home ${logdir}         --no-create-home --ingroup nofiles qmaill
	adduser -q --system --disabled-login --home ${qmaildir}       --no-create-home --ingroup nofiles qmailp
	adduser -q --system --disabled-login --home ${qmaildir}       --no-create-home --ingroup qmail   qmailq
	adduser -q --system --disabled-login --home ${qmaildir}       --no-create-home --ingroup qmail   qmailr
	adduser -q --system --disabled-login --home ${qmaildir}       --no-create-home --ingroup qmail   qmails
	chown qmaill:nofiles ${logdir}
	) > /tmp/notqmail-setup.log 2>&1
	;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
