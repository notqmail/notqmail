#!/bin/sh
# prerm script for notqmail
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

qmaildir=/var/qmail
mandir=/usr/share/man
rm=/bin/rm
mv=/bin/mv

ID=`id -u`
if [ $ID -ne 0 ] ; then
	echo "You are not root" >&2
	exit 1
fi

case "$1" in
    remove|upgrade|deconfigure)
	(
	set +e
	${prefix}/bin/svok /service/.svscan/log 2>/dev/null
	echo "Giving notqmail exactly 5 seconds to exit nicely" 1>&2
	if test -f /lib/systemd/system/notqmail.service && test -x /bin/systemctl
	then
		/bin/systemctl stop notqmail > /dev/null 2>&1 || true
	elif test -f /usr/lib/systemd/system/notqmail.service && test -x /bin/systemctl
	then
		/bin/systemctl stop notqmail > /dev/null 2>&1 || true
	fi
	sleep 5
	) > /tmp/notqmail-setup.log 2>&1
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# we are doing upgrade
if [ " $1" = " upgrade" -o " $1" = " deconfigure" ] ; then
	exit 0
fi
